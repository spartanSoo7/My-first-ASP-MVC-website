@model IEnumerable<MvcDemo.Models.VOUCHER_TABLE>

@{
    ViewBag.Title = "Vouchers";
}

<h2>Issued Vouchers</h2>
@if (TempData["notice"] != null)
{
    <h3 style="color: red;">@TempData["notice"]</h3>
}
<!--Search for student-->
@using (Html.BeginForm())
{
    <p>
        Find by students name or ID: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create", new{ id = "null" })
</p>
<style>
    th{
        font-size: 0.95em;

    }
    td {
        font-size: 0.8em;
    }
</style>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.REF_NUM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STUDENT_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.STUDENT.STUDENT_FNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VOUCHER_TYPE_TABLLE.VOUCHER_TYPE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VOUCHER_VALUE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KOHA_FUNDS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE_OF_ISSUE)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.REF_NUM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STUDENT_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STUDENT.STUDENT_FNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VOUCHER_TYPE_TABLLE.VOUCHER_TYPE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VOUCHER_VALUE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KOHA_FUNDS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATE_OF_ISSUE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.REF_NUM  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.REF_NUM  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.REF_NUM  })
        </td>
    </tr>
}

</table>
